    script window.jQuery || document.write('<script src="/#{locals.fileNames.js.jquery}"><\/script>')
    script(src='/#{locals.fileNames.js.main}')


block body

    <!-- Navigation -->
    nav.navbar.navbar-default.navbar-custom.navbar-fixed-top
        div.container-fluid
            <!-- Brand and toggle get grouped for better mobile display -->
            div.navbar-header.page-scroll
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/index.html') Start Bootstrap

            <!-- Collect the nav links, forms, and other content for toggling -->
            div#bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/index.html') Home
                    li
                        a(href='/about.html') About
                    li
                        a(href='/post.html') Sample Post
                    li
                        a(href='/contact.html') Contact


    block content


    hr


    <!-- Footer -->
    footer
        div.container
            div.row
                div.col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                    ul.list-inline.text-center
                        li
                            a.track-external-click(href='#', target='_blank')
                                span.fa-stack.fa-lg
                                    i.fa.fa-circle.fa-stack-2x
                                    i.fa.fa-twitter.fa-stack-1x.fa-inverse
                        li
                            a.track-external-click(href='#', target='_blank')
                                span.fa-stack.fa-lg
                                    i.fa.fa-circle.fa-stack-2x
                                    i.fa.fa-facebook.fa-stack-1x.fa-inverse
                        li
                            a.track-external-click(href='#', target='_blank')
                                span.fa-stack.fa-lg
                                    i.fa.fa-circle.fa-stack-2x
                                    i.fa.fa-github.fa-stack-1x.fa-inverse

                    p.copyright.text-muted Copyright &copy; Your Website #{locals.year}